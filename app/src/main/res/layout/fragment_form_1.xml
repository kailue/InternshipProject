<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/fragment_form_1">

    <TextView
        android:text="HEADINGS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/heading1"
        android:textSize="50sp"/>

    <TextView
        android:text=" Description\n\n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/heading1"
        android:id="@+id/description1"
        android:textSize="20sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description1"
        android:layout_alignParentStart="true"
        android:weightSum="7.5"
        android:id="@+id/ans1">

        <Button
            android:id="@+id/yes1"
            android:text="Yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <Button
            android:id="@+id/no1"
            android:text="No"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <Button
            android:id="@+id/na1"
            android:text="N/A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ans1"
        android:id="@+id/line1"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp"/>

    <TextView
        android:text="HEADINGS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line1"
        android:id="@+id/heading2"
        android:textSize="50sp"/>

    <TextView
        android:text=" Description\n\n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/heading2"
        android:id="@+id/description2"
        android:textSize="20sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description2"
        android:layout_alignParentStart="true"
        android:weightSum="7.5"
        android:id="@+id/ans2">

        <Button
            android:id="@+id/yes2"
            android:text="Yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <Button
            android:id="@+id/no2"
            android:text="No"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <Button
            android:id="@+id/na2"
            android:text="N/A"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ans2"
        android:background="@android:color/darker_gray"
        android:id="@+id/line2"
        android:layout_marginTop="5dp"/>

</RelativeLayout>